{% if section.settings.enable != false %}
    <section class="section section--rich-text section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="rich-text">
        {% render 'content-image-text', page: 'page' %}
    </section>
{% endif %}

{% schema %}
{
    "name": "Rich text",
    "class": "js-section__overview-rich-text",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable",
            "label": "Enable",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "full_width",
            "label": "Wide display"
        },
        {
            "type": "text",
            "id": "section_title",
            "label": "Heading",
            "default": "Talk about your brand"
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
        }
    ]
}
{% endschema %}