{% if section.settings.enable != false %}
    <section class="section section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="home-html">
        <div class="home-html">
            <div class="container container--medium">
                <img src="{{ section.settings.image | img_url: '' }}" alt="{{ section.settings.image.alt }}" />
            </div>
        </div>
    </section>
{% endif %}

{% schema %}
{
    "name": "Comparision Box",
    "class": "js-section__overview-comparision-box",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable",
            "label": "Enable",
            "default": false
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Image size 1140 x 420px"
        }
    ]
}
{% endschema %}

